<h1><%= t('text.session.login')%></h1>

<%= form_tag sessions_path do %>
  <div class="field">
  	<br />
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], :class => 'input-xlarge' %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'input-xlarge' %>
  </div>
  <div class="actions"><%= submit_tag I18n.t('text.session.login'), :class => 'btn btn-primary' %></div>
<% end %>